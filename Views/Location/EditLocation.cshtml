@model Location

<form method="post">
    <div asp-validation-summary="All">    </div>

    <input type="hidden" asp-for="locationId" />

    <table>
        <tr>
            <th> Name: </th>
            <td> <input asp-for="locationName" /> </td>
        </tr>
        <tr>
            <th> Distance: </th>
            <td> <input asp-for="distance" /> </td>
        </tr>
        <tr>
            <th> Times Visited: </th>
            <td> <input asp-for="time" /> </td>
        </tr>
        <tr>
            <th> </th>
            <td>
                <input class="btn btn-sm btn-outline-warning mr-1 text-dark" type="submit" value="Save" />
                <a asp-controller="Goal" asp-action="Index" asp-route-id="@Model.locationId" class="btn btn-sm btn-outline-primary ml-1"> Cancel </a>
            </td>
        </tr>
    </table>
</form>


